<h1><%= @list.name %></h1>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

<% @list.bookmarks.each do |bookmark| %>
<p><%= bookmark.comment %></p>
<p><%= bookmark.movie.title %></p>
<% end %>

<% @list.movies.each do |movie| %>
<p><%= movie.title %></p>
<p><%= movie.overview %></p>
<p><%= movie.poster_url %></p>
<p><%= movie.rating %></p>
<% end %>

<%= link_to "Back to overview", lists_path %>
<%= link_to "Create bookmark",  new_list_bookmark_path(@list) %>
